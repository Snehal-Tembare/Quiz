<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:background="@color/background_color_all"
    android:transitionName="@string/transition"
    >
    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_name_text_size"
        android:textColor="@color/user_name_color"
        android:layout_marginLeft="@dimen/common_dimens_10"
        android:textStyle="italic"
        android:layout_marginBottom="@dimen/gridview_spacing"
        />
    <ImageButton
        android:id="@+id/image_question_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit_to_app"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/timer_top_margin"
        android:layout_marginRight="@dimen/gridview_spacing"
        android:background="@android:color/transparent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_time_remaining_top_margin"
        android:orientation="horizontal"
        android:id="@+id/layout_time_remaining"
        >

        <ImageView
            android:id="@+id/image_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_timer"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/tab_timer_top_margin"
            />
        <TextView
            android:id="@+id/text_remaining_time"
            android:layout_toRightOf="@+id/image_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gridview_spacing"
            android:textSize="@dimen/tab_option_text_size"
            android:layout_marginTop="@dimen/tab_timer_top_margin"
            android:textColor="@color/black" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/view_color"
        android:layout_marginTop="@dimen/tab_view_top_margin"
        >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tab_question_text_size"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/tab_question_top_margin"
            android:gravity="center_horizontal"
            android:foregroundGravity="clip_horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/tab_question_left_right_margin"
            android:layout_marginRight="@dimen/tab_question_left_right_margin" />

        <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/view_color">
        </View>
        <LinearLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/text_option_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tab_option_text_size"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/top_margin"
                android:textColor="@color/black"
                android:background="@drawable/border"
                android:padding="@dimen/gridview_spacing"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/text_option_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tab_option_text_size"
                android:gravity="center_horizontal"
                android:background="@drawable/border"
                android:textColor="@color/black"
                android:padding="@dimen/gridview_spacing"
                android:layout_marginTop="@dimen/top_margin"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/text_option_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/border"
                android:textColor="@color/black"
                android:textSize="@dimen/tab_option_text_size"
                android:padding="@dimen/gridview_spacing"
                android:layout_marginTop="@dimen/top_margin"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/text_option_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/border"
                android:textColor="@color/black"
                android:textSize="@dimen/tab_option_text_size"
                android:padding="@dimen/gridview_spacing"
                android:layout_marginTop="@dimen/top_margin"
                android:clickable="true"
                />

            <TextView
                android:id="@+id/idtxtAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/option_text_size"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/skip_bottom_padding"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:background="@color/control_background_color">
        </View>
        <Button
            android:id="@+id/button_skip_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textSize="@dimen/skip_text_size"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            />
    </RelativeLayout>

</RelativeLayout>