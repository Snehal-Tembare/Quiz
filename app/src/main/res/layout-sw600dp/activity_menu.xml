<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/username_padding"
    tools:context=".MenuActivity"
    android:background="@color/background_color_all"
    android:transitionName="@string/transition">
    <TextView
        android:id="@+id/text_main_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_name_text_size"
        android:textColor="@color/user_name_color"
        android:layout_marginTop="@dimen/gridview_spacing"
        android:layout_marginLeft="@dimen/common_dimens_5"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gridview_spacing"
        android:layout_below="@+id/text_main_user_name">
    </ListView>
    <TextView
        android:id="@+id/text_menu_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_instruction"
        android:textColor="@color/red"
        android:textStyle="italic"
        android:textSize="@dimen/question_text_size"
        android:layout_below="@id/listView"
        android:layout_marginTop="@dimen/common_dimens_5"/>

    <Button
        android:id="@+id/button_submit_test"
        android:layout_width="@dimen/common_dimens_120"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView"
        android:text="@string/submit_test"
        android:textSize="@dimen/skip_text_size"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_marginTop="@dimen/tab_submit_button_top_margin"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/tab_submit_button_padding"
        android:paddingLeft="@dimen/tab_submit_button_padding"
        android:paddingRight="@dimen/tab_submit_button_padding"
        android:paddingBottom="@dimen/tab_submit_button_padding"
        android:background="@drawable/circlulartextview"/>
</RelativeLayout>
